<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

  <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="80.0dip"
          android:layout_gravity="bottom"
          android:background="@color/white">

    <TextView
            android:id="@+id/tv_increment"
            android:layout_width="60.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="#ffff3f3f"
            android:gravity="center|left|top"
            android:paddingLeft="10.0dip"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="34.0sp" />

    <TextView
            android:id="@+id/tv_decrement"
            android:layout_width="60.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="#ff99cc00"
            android:gravity="center|right|top"
            android:paddingRight="10.0dip"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="34.0sp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/tv_increment"
            android:layout_toRightOf="@+id/tv_decrement"
            android:gravity="center"
            android:orientation="vertical">

      <TextView
              android:id="@+id/tv_title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:gravity="center"
              android:maxLines="2"
              android:padding="5.0dip"
              android:textColor="#ff444444"
              android:textSize="14.0sp" />

      <TextView
              android:id="@+id/tv_value"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:gravity="center"
              android:paddingLeft="5.0dip"
              android:paddingRight="5.0dip"
              android:textColor="#ff444444"
              android:textSize="18.0sp"
              android:maxLines="1" />
    </LinearLayout>
  </RelativeLayout>
</FrameLayout>