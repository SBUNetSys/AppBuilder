<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

  <ImageView
          android:id="@+id/imageView_bg"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:scaleType="centerCrop"
          android:tint="#aa000000" />

  <TextView
          android:id="@+id/textView_title"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/imageView_play_forward"
          android:layout_alignParentTop="true"
          android:layout_marginBottom="32.0dip"
          android:gravity="center"
          android:padding="10.0dip"
          android:text=""
          android:textColor="#fffefcff" />

  <ImageButton
          android:id="@+id/imageView_play"
          android:layout_width="56.0dip"
          android:layout_height="56.0dip"
          android:layout_centerInParent="true" />

  <ImageButton
          android:id="@+id/imageView_play_forward"
          android:background="?android:selectableItemBackground"
          android:layout_width="56.0dip"
          android:layout_height="56.0dip"
          android:layout_alignParentLeft="false"
          android:layout_alignParentRight="true"
          android:layout_centerInParent="true"
          android:tint="#ff448aff" />

  <ImageButton
          android:id="@+id/imageView_play_rewind"
          android:layout_width="56.0dip"
          android:layout_height="56.0dip"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="false"
          android:layout_centerInParent="true"
          android:tint="#ff448aff" />

  <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="false"
          android:layout_below="@+id/imageView_play"
          android:layout_centerHorizontal="true"
          android:orientation="horizontal">

    <ImageButton
            android:id="@+id/imageView_play_stop"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:tint="#ff448aff" />

    <ImageButton
            android:id="@+id/imageView_play_next"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:tint="#ff448aff" />
  </LinearLayout>
</RelativeLayout>